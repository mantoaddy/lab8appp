<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg"
            app:tint="#EFAF1C"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/icon"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="35dp"
            android:text="Главный экран"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Введите начало и конец диапазона"
            android:textColor="@color/black"
            android:textSize="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="10">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/strt"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxBackgroundColor="#95E6CA8E"
            app:startIconTint="#FAB400"
            app:boxStrokeColor="#CEB275"
            app:hintTextColor="#A6750D"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            android:hint="Начало"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            app:errorEnabled="true"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/strtinp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/endd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxBackgroundColor="#95E6CA8E"
            app:boxStrokeColor="#CEB275"
            app:hintTextColor="#A6750D"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            android:hint="Конец"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            app:errorEnabled="true"
            android:textColorHint="@color/black"
            app:errorTextColor="#FF0000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enddinp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionSend"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/logso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="24dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="Логи появятся здесь"
            android:gravity="start"
            android:background="@drawable/tw"/>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        android:paddingLeft="54dp"
        android:paddingRight="54dp">

      <com.google.android.material.button.MaterialButton
          android:id="@+id/btnst"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:backgroundTint="#5D4F2D"
          android:text="Начать поиск" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="6">
          <com.google.android.material.button.MaterialButton
              android:id="@+id/btntask1"
              android:backgroundTint="#8A6C1F"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Задача 1"
              android:layout_weight="3"
              android:layout_marginRight="8dp"
              android:textSize="12dp"/>

          <com.google.android.material.button.MaterialButton
              android:id="@+id/btntask2"
              android:backgroundTint="#8A6C1F"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Задача 2"
              android:layout_weight="3"
              android:layout_marginLeft="8dp"
              android:textSize="12dp"/>
      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btntask3"
        android:backgroundTint="#8A6C1F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Задача 3"
        android:layout_weight="2"
        android:textSize="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btntask4"
        android:backgroundTint="#8A6C1F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Задача 4"
        android:layout_weight="2"
        android:textSize="12dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btncl"
        android:backgroundTint="#D1BE8C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Очистить"
        android:layout_weight="2"
        android:textSize="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnhis"
        android:backgroundTint="#D1BE8C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="История"
        android:layout_weight="2"
        android:textSize="12dp"/>
</LinearLayout>
  </LinearLayout>
    </LinearLayout>
</FrameLayout>
